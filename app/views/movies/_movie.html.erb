<div id="<%= dom_id movie %>">
  <div
    class="
      max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800
      dark:border-gray-700
    "
  >
    <%= image_tag movie.cover, class: "rounded-t-lg" %>
    <div class="p-5">
      <h5
        class="
          mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white
        "
      ><%= movie.title %></h5>

      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= movie.description %></p>
      <p>
        <strong>Genres:</strong>
        <% movie.genres.each do |genre| %>
          <%= genre.name %>
        <% end %>
      </p>
      <%= link_to "Show this movie",
      movie,
      class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <!--
      <% if action_name != "show" %>
        <%= link_to "Show this movie",
        movie,
        class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <%= link_to "Edit this movie",
        edit_movie_path(movie),
        class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
        <hr class="mt-6">
      <% end %>-->
    </div>
  </div>
</div>
