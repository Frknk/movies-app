<div id="<%= dom_id movie %>">
  <div
    class="
      max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800
      dark:border-gray-700
    "
  >
    <% if movie.cover.present? %>
    <%= image_tag movie.cover, class: "rounded-t-lg" %>
    <% else %>
    <p>No cover available for this movie.</p>
    <% end%>
    
    <div class="p-5">
      <h5
        class="
          mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white
        "
      ><%= movie.title %></h5>

      <p class="mb-3 font-normal tex t-gray-700 dark:text-gray-400"><%= movie.description %></p>
      <p>
        <strong class="mb-3 font-bold text-gray-700 dark:text-gray-400">Genres:</strong>
        <% movie.genres.each do |genre| %>
          <p class="font-normal text-gray-700 dark:text-gray-400"><%= genre.name %></p>
        <% end %>
      </p>
      <%= link_to "Show this movie",
      movie,
      class:
        "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      <!--
      <% if action_name != "show" %>
        <%= link_to "Show this movie",
        movie,
        class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <%= link_to "Edit this movie",
        edit_movie_path(movie),
        class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
        <hr class="mt-6">
      <% end %>-->
    </div>
  </div>
</div>
